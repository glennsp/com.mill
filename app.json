{
  "id": "com.mill",
  "version": "1.1.0",
  "compatibility": ">=1.5.0",
  "sdk": 2,
  "name": {
    "en": "Mill WiFi"
  },
  "tags": {
    "en": [ "mill", "heating" ]
  },
  "description": {
    "en": "Integrate Mill WiFi heating devices with Homey",
    "nl": "Gebruik Mill WiFi verwarming met Homey"
  },
  "author": {
    "name": "Glenn S. Pedersen",
    "email": "glenn.pedersen@gmail.com"
  },
  "contributors": {
    "developers": [
      {
        "name": "Ram√≥n Baas"
      }
    ]
  },
  "homeyCommunityTopicId": 3851,
  "contributing": {
    "donate": {
      "paypal": {}
    }
  },
  "category": [
    "climate"
  ],
  "permissions": [],
  "images": {
    "large": "/assets/images/large.png",
    "small": "/assets/images/small.png"
  },
  "capabilities": {
    "mill_onoff": {
      "type": "boolean",
      "title": {
        "en": "Heating",
        "nl": "Verwarmen"
      },
      "desc": {
        "en": "State of the thermostat",
        "nl": "Thermostaat status"
      },
      "getable": true,
      "setable": false,
      "icon": "/drivers/mill/assets/mill_onoff.svg"
    },
    "mill_mode": {
      "type": "enum",
      "title": {
        "en": "Thermostat mode",
        "nl": "Thermostaat modus"
      },
      "desc": {
        "en": "Mode of the thermostat",
        "nl": "Modus van de thermostaat"
      },
      "values": [
        {
          "id": "Program",
          "title": {
            "en": "Program",
            "nl": "Programma"
          }
        },
        {
          "id": "Comfort",
          "title": {
            "en": "Comfort"
          }
        },
        {
          "id": "Sleep",
          "title": {
            "en": "Sleep",
            "nl": "Slapen"
          }
        },
        {
          "id": "Away",
          "title": {
            "en": "Away",
            "nl": "Weg"
          }
        },
        {
          "id": "Off",
          "title": {
            "en": "Off",
            "nl": "Uit"
          }
        }
      ],
      "getable": true,
      "setable": true
    }
  },
  "flow": {
    "triggers": [
      {
        "id": "mill_mode_changed",
        "title": {
          "en": "Thermostat mode has changed",
          "nl": "Modus van de thermostaat is gewijzigd"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=mill"
          }
        ],
        "tokens": [
          {
            "name": "mill_mode",
            "type": "string",
            "title": {
              "en": "Mode",
              "nl": "Modus"
            },
            "example": "Comfort"
          }
        ]
      },
      {
        "id": "mill_mode_changed_to",
        "title": {
          "en": "Thermostat mode has changed to",
          "nl": "Thermostaat modus is gewijzigd naar"
        },
        "args": [
          {
            "type": "dropdown",
            "name": "mill_mode",
            "values": [
              {
                "id": "Comfort",
                "label": {
                  "en": "Comfort"
                }
              },
              {
                "id": "Sleep",
                "label": {
                  "en": "Sleep",
                  "nl": "Slapen"
                }
              },
              {
                "id": "Away",
                "label": {
                  "en": "Away",
                  "nl": "Weg"
                }
              },
              {
                "id": "Off",
                "label": {
                  "en": "Off",
                  "nl": "Uit"
                }
              }
            ]
          },
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=mill"
          }
        ]
      }
    ],
    "conditions": [
      {
        "id": "mill_is_heating",
        "title": {
          "en": "!{{Is|Isn't}} heating",
          "nl": "Verwarmt !{{|niet}}"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=mill"
          }
        ]
      },
      {
        "id": "mill_mode_matching",
        "title": {
          "en": "Thermostat mode !{{is|isn't}}",
          "nl": "Thermostaat mode !{{is|is niet}}"
        },
        "args": [
          {
            "type": "dropdown",
            "name": "mill_mode",
            "values": [
              {
                "id": "Program",
                "label": {
                  "en": "Program",
                  "nl": "Programma"
                }
              },
              {
                "id": "Comfort",
                "label": {
                  "en": "Comfort"
                }
              },
              {
                "id": "Sleep",
                "label": {
                  "en": "Sleep",
                  "nl": "Slapen"
                }
              },
              {
                "id": "Away",
                "label": {
                  "en": "Away",
                  "nl": "Weg"
                }
              },
              {
                "id": "Off",
                "label": {
                  "en": "Off",
                  "nl": "Uit"
                }
              }
            ]
          },
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=mill"
          }
        ]
      }
    ],
    "actions": [
      {
        "id": "mill_set_mode",
        "title": {
          "en": "Set thermostat mode",
          "nl": "Stel modus in"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=mill"
          },
          {
            "type": "dropdown",
            "name": "mill_mode",
            "values": [
              {
                "id": "Program",
                "label": {
                  "en": "Program",
                  "nl": "Programma"
                }
              },
              {
                "id": "Comfort",
                "label": {
                  "en": "Comfort"
                }
              },
              {
                "id": "Sleep",
                "label": {
                  "en": "Sleep",
                  "nl": "Slapen"
                }
              },
              {
                "id": "Away",
                "label": {
                  "en": "Away",
                  "nl": "Weg"
                }
              },
              {
                "id": "Off",
                "label": {
                  "en": "Off",
                  "nl": "Uit"
                }
              }
            ]
          }
        ]
      }
    ]
  },
  "drivers": [
    {
      "id": "mill",
      "name": {
        "en": "Mill"
      },
      "class": "thermostat",
      "capabilities": [
        "measure_temperature",
        "target_temperature",
        "mill_onoff",
        "mill_mode",
        "measure_power"
      ],
      "capabilitiesOptions": {
        "measure_power": {
          "approximated": true
        }
      },
      "images": {
        "large": "/drivers/mill/assets/images/large.png",
        "small": "/drivers/mill/assets/images/small.png"
      },
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_device"
          }
        },
        {
          "id": "add_device",
          "template": "add_devices"
        }
      ],
      "settings": [
        {
          "type": "group",
          "label": {
            "en": "Properties",
            "nl": "Eigenschappen"
          },
          "children": [
            {
              "id": "power",
              "type": "number",
              "label": {
                "en": "Power (W)",
                "nl": "Energie (W)"
              },
              "value": 1200,
              "hint": {
                "en": "Max. power in watt that the heater uses when switched on. E.g. for the NE1200WIFI this will be 1200."
              }
            }
          ]
        }
      ]
    }
  ]
}
